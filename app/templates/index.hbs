<header class="vlc-content-header vl-grid">
  <picture class="vl-col--12-12 vlc-content-header__image">
    <source srcset="/assets/images/main-banner1x-wide.jpg 1x, /assets/images/main-banner2x-wide.jpg 2x"
      media="(min-width: 1024px)">
    <source srcset="/assets/images/main-banner1x-mobile.jpg 1x, /assets/images/main-banner2x-mobile.jpg 2x"
      media="(max-device-width: 767px)">
    <source srcset="/assets/images/main-banner1x-narrow.jpg 1x, /assets/images/main-banner2x-narrow.jpg 2x"
      media="(max-width: 1023px)">
    <img src="/assets/images/main-banner1x-wide.jpg"
      srcset="/assets/images/main-banner1x-wide.jpg 1x, /assets/images/main-banner1x-wide.jpg 2x"
      alt="header afbeelding standbeeld Brussel">
  </picture>
  <hgroup class="vlc-content-header__content">
    <a href="http://www.vlaanderen.be/vlaamse-regering" class="vl-title vl-title--h3 vlc-content-header__link">
      Vlaamse Regering
    </a>
    <h1 class="vl-title vl-title--h1 vlc-content-header__title">
      Beslissingen van de Vlaamse Regering
    </h1>
  </hgroup>
</header>

<div class="main-content">
  <div class="vl-layout">
    <div class="vl-grid vl-grid--is-stacked">
      <div class="vl-col--4-12 vl-col--12-12--s">
        <SearchBox />

        <a href="https://www.vlaanderen.be/ontvang-nieuwe-persberichten-en-beslissingen-via-e-mail"
          class="vl-link vl-u-spacer-extended-bottom vl-u-text--bold">
          Abonneren op de beslissingen van de Vlaamse Regering
        </a>

        <div class="vlc-spotlight">
          <a href="https://www.vlaanderen.be/vlaamse-regering" class="spotlight external-link">
            <div class="vlc-spotlight__image-container">
              <img class="vlc-spotlight__image"
                srcset="/assets/images/vlaamseregering-1x.jpg 1x, /assets/images/vlaamseregering-2x.jpg 2x"
                src="/assets/images/vlaamseregering-1x.jpg" alt="">
            </div>
            <h4 class="vlc-spotlight__title vl-title vl-title--h4" data-clamp="0">Regering Jambon I</h4>
          </a>
        </div>
      </div>
      <div class="vl-col--8-12 vl-col--12-12--s">
        <div class="h1-sublink vl-u-spacer-extended-left-l">
          <h2 class="vl-title vl-title--h2">{{format-number count}} resultaten</h2>
          {{#if showBackLink}}
            <a role="button" onclick={{action "clearParams" }} class="vl-link">
              <i class="vi vi-u-link vi-arrow vi-u-180deg"></i>Toon alle beslissingen
            </a>
          {{/if}}
        </div>
        {{#if meetings.length}}
          <div class="view-ip-decisions-search">
            <div class="view-content vl-u-spacer-extended-left-l">
              <div class="item-list">
                {{#each meetings as |meeting|}}
                  <h2 class="vl-title vl-title--h2 vl-u-text--bold vl-u-spacer">
                    {{meeting.record.type.label}} van {{moment-format meeting.date "DD MMMM YYYY"}}
                  </h2>
                  <MeetingNotifications @meetingId={{meeting.id}} />
                  {{#each meeting.news as |newsInfo|}}
                    <NewsInfoView @newsInfo={{newsInfo}} />
                  {{/each}}

                  {{#if meeting.announcements.length}}
                    <h2 class="vl-title vl-title--h2 vl-u-text--bold vl-u-spacer">Mededelingen</h2>
                    {{#each meeting.announcements as |newsInfo|}}
                      <NewsInfoView @newsInfo={{newsInfo}} />
                    {{/each}}
                  {{/if}}
                {{/each}}
              </div>
            </div>

            {{#if hasMoreResults}}
              <ul class="pager pager--infinite-scroll vl-u-align-center">
                <li class="pager__item">
                  <button class="vl-button" {{action "loadMore" }}>
                    Laad meer
                  </button>
                </li>
              </ul>
            {{/if}}
          </div>
        {{/if}}
      </div>
    </div>
  </div>
</div>
{{outlet}}