<div class="vlc-input-field-block">
  <label class="vl-form__label">
    Voorgesteld door
  </label>

  <div class="form-element">
    <div class="form__input">
      <PowerSelect @selected={{this.selected}} @options={{this.options}} @onChange={{this.onChangeOption}} as |option|>
        {{option.label}} {{#if option.count}} ({{option.count}}) {{/if}}
      </PowerSelect>
    </div>
  </div>
</div>

{{#if isEnabledHistoricOption}}
  <div class="filter__field form-item">
    <div class="form-element">
      <div class="form__input">
        <PowerSelect @selected={{this.selectedHistoric}} @options={{this.historicOptions}}
          @onChange={{this.onChangeHistoricOption}} as |option|>
          {{option.label}}{{#if option.count}} ({{option.count}}){{/if}}
        </PowerSelect>
      </div>
    </div>
  </div>
{{/if}}